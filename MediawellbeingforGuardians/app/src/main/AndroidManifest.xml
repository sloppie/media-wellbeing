<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sloppie.mediawellbeing.guardians">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:name=".MediaWellbeingApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MediawellbeingForGuardians">
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/splash_screen_activity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserLogActivity"
            android:label="@string/user_log_activity"/>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:parentActivityName=".UserLogActivity"
            android:name=".LabelImage"
            android:label="@string/label_image_activity"/>
        <activity
            android:name=".Preferences"
            android:label="@string/preferences_activity"/>
        <activity
            android:name=".Profiles"
            android:label="@string/profiles_activity" />
        <activity
            android:name=".MainActivity"/>
    </application>

</manifest>